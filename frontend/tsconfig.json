{
  "compilerOptions": {
    /* ===============================
       Basic TypeScript Configuration
       =============================== */
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* ===============================
       Module & Resolution
       =============================== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* ===============================
       Next.js Optimizations
       =============================== */
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ===============================
       ðŸ”‘ PATH ALIAS CONFIG (IMPORTANT)
       =============================== */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },

  /* ===============================
     Files to Include
     =============================== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* ===============================
     Files to Exclude
     =============================== */
  "exclude": [
    "node_modules"
  ]
}
